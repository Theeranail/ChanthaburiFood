<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        card_view:cardBackgroundColor="@color/White">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/container_list_food_padding">

            <ImageView
                android:id="@+id/img_show"
                android:layout_width="@dimen/img_show_width"
                android:layout_height="@dimen/img_show_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/img_show_marginRight" />

            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/img_show"
                android:text="ร้านมาลองเทส"
                android:textColor="@color/colorfont"
                android:textSize="@dimen/fonsizeM" />

            <TextView
                android:id="@+id/text_location"
                android:layout_width="@dimen/widtextAddressmain"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_name"
                android:layout_toRightOf="@+id/img_show"
                android:text="ตำแหน่ง:จันทบุรี"
                android:textSize="@dimen/fonsizeN" />

            <RatingBar
                android:id="@+id/content_vodt"
                android:layout_width="@dimen/content_vodt_width"
                android:layout_height="@dimen/content_vodt_height"
                android:layout_below="@+id/text_location"
                android:layout_toRightOf="@+id/img_show"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/content_vodt_marginLeft"
                android:layout_marginTop="@dimen/content_vodt_layout_marginTop"
                android:progressTint="@color/colorPrimary"
                android:isIndicator="true"
                android:scaleX="0.3"
                android:scaleY="0.3" />


            <TextView
                android:id="@+id/content_distane"
                android:layout_width="@dimen/widtextAddressmain"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text_location"
                android:layout_marginRight="@dimen/content_distane_marginRight"
                android:layout_marginLeft="@dimen/content_distane_marginleft"
                android:layout_marginTop="@dimen/ontent_distane_marginTop"
                android:layout_toLeftOf="@+id/icon_right_black"
                android:layout_toRightOf="@+id/content_vodt"
                android:gravity="right"
                android:text=""
                android:textSize="@dimen/ontent_distane_textSize" />


            <ImageView
                android:id="@+id/icon_right_black"
                android:layout_width="@dimen/icon_right_black_width"
                android:layout_height="@dimen/icon_right_black_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="-15dp"
                android:src="@drawable/ic_action_name" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
